<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	 .table-style {
      border: 1px solid black;
    }
	</ui:style>
	<g:HTMLPanel>
		<h2>
			Welcome
			<span ui:field="doctorNameLabel"></span>
		</h2>
		<g:HorizontalPanel>
			<g:TextBox ui:field="patientNameTextBox" />
			<g:Button ui:field="addPatientButton">Add Patient</g:Button>
		</g:HorizontalPanel>
		 <g:FlexTable styleName="{style.table-style}" ui:field="patientTable" />
	</g:HTMLPanel>
</ui:UiBinder> 